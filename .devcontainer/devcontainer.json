{
    "name": "Nerdcore | Code Challenges",
    "build": {
        "context": ".",
        "dockerfile": "Dockerfile",
        "args": {}
    },
    "mounts": [
        "type=bind,source=${localWorkspaceFolder},target=/home/wired/code_challenges",
        "type=bind,source=/Users/wired/.vimrc,target=/home/wired/.vimrc"
        // "type=bind,source=\\\\wsl.localhost\\Ubuntu\\home\\wired\\.ssh,target=/home/wired/.ssh",
        // "type=bind,source=\\\\wsl.localhost\\Ubuntu\\home\\wired\\.gitconfig,target=/home/wired/.gitconfig",
        // "type=bind,source=\\\\wsl.localhost\\Ubuntu\\home\\wired\\.gnupg,target=/home/wired/.gnupg",
        // "type=bind,source=\\\\wsl.localhost\\Ubuntu\\home\\wired\\.vimrc,target=/home/wired/.vimrc"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "aaron-bond.better-comments",
                "ms-azuretools.vscode-docker",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "GitHub.vscode-pull-request-github",
                "ms-python.vscode-pylance",
                "ms-python.python",
                "ms-python.debugpy",
                "donjayamanne.python-environment-manager",
                "evendead.help-me-add",
                "eamodio.gitlens",
                "TeamHub.teamhub",
                "jasonlhy.hungry-delete",
                "oderwat.indent-rainbow",
                "yzhang.markdown-all-in-one",
                "yzane.markdown-pdf",
                "shd101wyy.markdown-preview-enhanced",
                "bierner.markdown-preview-github-styles",
                "bierner.markdown-mermaid",
                "DavidAnson.vscode-markdownlint",
                "philsinatra.nested-comments",
                "ionutvmi.path-autocomplete",
                "christian-kohler.path-intellisense",
                "Gruntfuggly.todo-tree",
                "hbenl.vscode-test-explorer",
                "github.vscode-github-actions",
                "arturock.gitstash",
                "donjayamanne.githistory",
                "tombonnike.vscode-status-bar-format-toggle",
                "sleistner.vscode-fileutils",
                "tamasfe.even-better-toml",
                "EditorConfig.EditorConfig",
                "formulahendry.code-runner",
                "formulahendry.auto-complete-tag",
                "dkundel.vscode-new-file",
                "ryanluker.vscode-coverage-gutters",
                "ms-python.black-formatter",
                "kaih2o.python-resource-monitor",
                "mgesbert.python-path",
                "ms-python.flake8",
                "slightc.pip-manager",
                "ms-python.pylint",
                "formulahendry.auto-rename-tag",
                "formulahendry.auto-close-tag",
                "ms-vscode.test-adapter-converter",
                "ms-vscode.live-server",
                "ms-python.isort",
                "njqdev.vscode-python-typehint",
                "almenon.arepl",
                "mads-hartmann.bash-ide-vscode",
                "timonwong.shellcheck",
                "rogalmic.bash-debug"
            ]
        }
    },
    "postCreateCommand": "chown -R wired:wired ~/.ssh ~/.gitconfig ~/.gnupg ~/.vimrc && gpgconf --kill gpg-agent && gpg-agent --daemon",
    "remoteUser": "wired"
}
